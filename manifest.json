{
    "manifest_version": 3,
    "name": "Web Highlighter & Summarizer",
    "version": "1.0",
    "description": "Automatically highlights key points in articles and provides a summary.",
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }